<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fer.gv.com.gato.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="10dp">

        <TableRow android:layout_weight="1">
            <EditText
                android:id="@+id/activity_main_box1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/activity_main_box2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/activity_main_box3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <EditText
                android:id="@+id/activity_main_box4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/activity_main_box5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/activity_main_box6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <EditText
                android:id="@+id/activity_main_box7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/activity_main_box8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
            <EditText
                android:id="@+id/activity_main_box9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="none"
                android:focusable="false"
                android:onClick="fillBox"
                android:textSize="35sp"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/activity_main_btnRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_record"
            android:onClick="btnRecord_click"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
        <Button
            android:id="@+id/activity_main_btnDeleteRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_delete_record"
            android:onClick="btnDeleteRecord_click"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/activity_main_btnNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_new_game"
            android:onClick="btnNewGame_click"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:padding="5dp"
            />
    </LinearLayout>
</LinearLayout>
